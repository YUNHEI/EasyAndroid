<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:viewBindingIgnore="true"
    android:paddingBottom="@dimen/dimen_5">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.chen.basemodule.view.AutoAdjustTextSizeView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_info_my_cate"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_4"
            android:paddingTop="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_4"
            android:paddingBottom="@dimen/dimen_10"
            app:auto_just_maxTextSize="14"
            tools:text="aa" />

        <ImageView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:src="@mipmap/ic_label_video"
            tools:visibility="visible" />

    </FrameLayout>


    <ImageView
        android:id="@+id/delete"
        android:layout_width="@dimen/dimen_17"
        android:layout_height="@dimen/dimen_17"
        android:layout_marginRight="@dimen/dimen_2"
        android:src="@mipmap/ic_cate_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>